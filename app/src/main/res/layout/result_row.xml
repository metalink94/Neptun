<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="@dimen/spacing_normal_16"
              android:paddingRight="@dimen/spacing_normal_16"
              android:paddingTop="@dimen/spacing_smallest_8"
              android:paddingBottom="@dimen/spacing_smallest_8"
              android:background="@color/bg">

    <TextView
            android:id="@+id/team"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Team A - Team B"
            android:layout_weight="2"
            android:textColor="@android:color/white"
    />

    <TextView
            android:id="@+id/score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Score"
            android:layout_weight="0.5"
            android:textColor="@android:color/white"
    />

    <TextView
            android:id="@+id/coef"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Coeff"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/white"
    />

</LinearLayout>
